{
  "gvar": {
    "prefix": "gvar",
    "body": "if !exists(\"g:${1:MyUltraImportantVar}\")\n\tlet g:$1 = ${2:\"${3:<tab>}\"}\nendif",
    "description": "Global / configuration variable"
  },
  "guard": {
    "prefix": "guard",
    "body": "if exists('${1:did_`!p snip.rv = snip.fn.replace('.','_')`}') || &cp${2: || version < 700}\n\tfinish\nendif\nlet $1 = 1$3",
    "description": "script reload guard"
  },
  "f": {
    "prefix": "f",
    "body": "function ${1:function_name}($2)\n\t${3:\" code}\nendfunction",
    "description": "function"
  },
  "doc": {
    "prefix": "doc",
    "body": "\"--------------------------------------------------------------------------------\n\" ${1: title}\n\"--------------------------------------------------------------------------------",
    "description": "header block"
  },
  "pl": {
    "prefix": "pl",
    "body": "if !v:lua.as.plugin_loaded('${1:`!p snip.rv = snip.basename`}')\n\tfinish\nendif",
    "description": "plugin loaded check"
  },
  "pplug": {
    "prefix": "pplug",
    "body": "Plug '${1:`!v substitute(@+, '\\([^\\/]*\\/\\/[^\\/]*\\/\\)\\([^/]*\\/[^/]*\\)\\(.*\\)', '\\2', '' )`}'",
    "description": "vim-plug Paste Plugin"
  }
}